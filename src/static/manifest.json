{
  "name": "Repository Tracker",
  "description": "Repository Tracker allows you to track issues and pull requests in your favorite GitHub repositories.",
  "version": "1.0.2",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png",
    "48": "icon.png",    
    "16": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Repository Tracker",
    "default_icon": "icon.png"
  },
  "permissions": ["alarms", "notifications", "storage"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
